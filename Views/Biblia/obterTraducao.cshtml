@model Newtonsoft.Json.Linq.JObject

@{
    ViewData["Title"] = "Detalhes da Tradução";
}

<h1>Detalhes da Tradução</h1>
<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model["data"]["id"]</td>
    </tr>
    <tr>
        <th>Nome</th>
        <td>@Model["data"]["name"]</td>
    </tr>
    <tr>
        <th>Abreviação</th>
        <td>@Model["data"]["abbreviation"]</td>
    </tr>
    <tr>
        <th>Idioma</th>
        <td>@Model["data"]["language"]["name"]</td>
    </tr>
    <tr>
        <th>Descrição</th>
        <td>@Model["data"]["description"]</td>
    </tr>
</table>
